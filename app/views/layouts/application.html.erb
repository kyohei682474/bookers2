<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
     <header class="p-3 mb-2 bg-secondary text-white">
      <nav class="navbar navbar-expand-lg navbar-light" >
        <div class="container">
          <a class="text-white" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            
          
            <li class="nav-item">
             <%= link_to  user_path(current_user), class:'nav-link text-dark' do %>
           <i class="fas fa-home fa-lg" style="color: #edeff2;"></i>
           <i class="text-white ">Home</i>
            
             <% end %>
            </li>
            <li class="nav-item">
             <%= link_to  users_path, class:'nav-link text-dark' do %>
            <i class="fas fa-users fa-lg" style="color: #f2f4f8;"></i>
             <i class="text-white ">Users</i>
             <% end %>
            </li>
            <li class="nav-item">
             <%= link_to books_path, class:'nav-link text-dark' do %>
              <i class="fas fa-book-open fa-lg" style="color: #f5f5f5;"></i>
              <i class="text-white ">Books</i>
             <% end %>
            </li>
            <li class="nav-item">
            
              <%= link_to  destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                 <i class="fas fa-sign-out-alt fa-lg" style="color: #f7f7f8;"></i>
                 <i class="text-white ">Log out</i>
              <% end %>
              
            </li>                       
            <% else %>
            
            
            <li class="nav-item">
             <%= link_to  root_path, class:'nav-link text-dark' do %>
             <i class="fas fa-home fa-lg" style="color: #edeff2;"></i>
             <i class="text-white ">Home</i>
             <% end %>
            </li>
            <li class="nav-item">
             <%= link_to  about_path, class:'nav-link text-dark' do %>
             <i class="fas fa-link fa-lg" style="color: #efeff1;"></i>
             <i class="text-white ">About</i>
             <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class:'nav-link text-dark' do %>
               <i class="fas fa-user-plus fa-lg" style="color: #f2f2f3;"></i>
               <i class="text-white ">Sign up</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class:'nav-link text-dark' do %>
              <i class="fas fa-sign-in-alt fa-lg" style="color: #f0f2f5;"></i>
              <i class="text-white ">Log in</i>
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= render 'shared/flash_message' %>
    
    <%= yield %>
  </main>
  
  <footer>
     <div class="container 5">
       <div class="row">
         <div class="mx-auto">
           <p>CopyRight Infratop.inc</p>
         </div>
       </div>
     </div>
    </footer>
    </body>
</html>
