
  
  <div class="container px-5 px-sm-0">
    <div class="row">
     <%= render 'userinfo',book: @book_new,user: @book.user %>
 
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
     <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
         </tr>
        </thead>
      
        <tbody>
     
         <tr>
          <td><%= image_tag @book.user.get_profile_image(100,100) %>
              <%=link_to @book.user.name, user_path(@book.user.id) %></td>
          <td><%=link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to edit_book_path(@book.id) do %>
               <button type="button" class="btn btn-success">Edit</button>
              <% end %></td>
          <td>
               <%= link_to book_path(@book.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <button type="button" class="btn btn-danger">Destroy</button>
               <% end %>
              <% end %></td>
         </tr>
      
        </tbody>
     
        
      </table>
    </div> 
  </div>     
 </div>




   
 