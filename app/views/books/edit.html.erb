
<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <p><label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName"%></p>
 
  <label for="inputName">Opinion</label>
  <p><%= f.text_area :body, autofocus: true, id:"inputOption"%></p>
  
  
  <%= f.submit "Update book",class:'btn btn-success'%>
   
  
<% end %>

<%=link_to'show', book_path(@book.id) %> | <%=link_to'back', books_path(@books) %>