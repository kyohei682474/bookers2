    <title>Hello, world!</title>
  </head>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
       <body>
         <h1>User info</h1>
      　
       <p><%= image_tag @user.get_profile_image(100,100) %></p>
      　<table class="table">
         <tbody>
          <tr><p>name
          <span>
           <%=link_to @user.name, user_path(@user) %>
          </span></p></tr>
          <tr><p>introduction
          <span>
           <%=link_to @user.name, user_path(@user) %>
          </span>
          </p></tr>
          
         </tbody>
      　</table>
      　 
       
       <div class="row">
      　 <%= link_to edit_user_path(@user.id) ,class:"btn btn-outline-secondary btn-block 0" do %>
         　<i class="fas fa-edit" ></i>
         <% end %>
       </div>
     
    
     <h2 class="mt-3">New book</h2>
   
     <%= form_with model: @book do |f| %>
      
     
       <h4>Tilte</h4>
         <%= f.text_field :title %>
       <h4>Option</h4>
         <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
     <% end %>
 </div>



 <% @books.each do |book| %>
  <div>
   <p>Tilte</p>
    <span>
      <%=link_to book.title, book_path(book.id) %>
    </span>
   <p>Opinion</p>
   <span>
     <%=link_to book.body, book_path(book.id) %>
   </span>
  <% end %>
 </div>     
</div>



