

<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
     <h2>User info</h2>
    <%= form_with model: @user do |f| %>
      <p></p><label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </p>
      <p><label for="inputImage">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
      </p>
      <p>
      <label for="inputName">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputName" %>
      </p>
      
      <%= f.submit "Update User",class:'btn btn-secondary'%>
    <% end %>
  </div>
 </div>
</div>